<% if @result %>
  $('.qa-q-view-c-list').append('<%= j render(partial: "comment", locals: {comment: @comment, question: @post}) %>');
  $('#qa-q-comment').collapse('hide');
  $('#qa-q-comment textarea').val('');
<% else %>
  $('.qa-q-c-errors').html('<%= j render(partial: "shared/error_messages", locals: {object: @comment}) %>');
<% end %>
