<%= content_tag :div, class: "notification-card word-break #{notification.opened? ? nil : "bg-highlight"}" do %>
  <div class="avt-ctn"></div>
  <% if notification.opened? %>
    <%= link_to notification.notifiable_path, class: "message link" do %>
      <%= render partial: "activity_notification/notifications/users/vote/content", locals: {notification: notification} %>
    <% end %>
  <% else %>
    <%= link_to open_notification_path(notification), class: "message link", remote: true, method: :patch do %>
      <%= render partial: "activity_notification/notifications/users/vote/content", locals: {notification: notification} %>
    <% end %>
  <% end %>
<% end %>
