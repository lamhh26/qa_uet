$('[data-qa-c-id="<%= @comment.id %>"]').html('<%= j render partial: "edit_form", locals: {answer: @post, comment: @comment} %>');
$('[data-qa-c-id="<%= @comment.id %>"] .qa-c-textarea').focus();
$('[data-qa-c-id="<%= @comment.id %>"] .btn-cancel').click(function() {
  $('[data-qa-c-id="<%= @comment.id %>"]').replaceWith('<%= j render partial: "comment", locals: {answer: @post, comment: @comment} %>');
});
