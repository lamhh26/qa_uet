<% if @result %>
  $('[data-qa-q-a-id="<%= @post.id %>"] .qa-a-item-c-list').append('<%= j render(partial: "comment", locals: {comment: @comment, answer: @post}) %>');
  $('#qa-a-comment-<%= @post.id %>').collapse('hide');
  $('#qa-a-comment-<%= @post.id %> textarea').val('')
<% else %>
  $('#qa-a-comment-<%= @post.id %> .qa-a-c-errors').html('<%= j render(partial: "shared/error_messages", locals: {object: @comment}) %>');
<% end %>
