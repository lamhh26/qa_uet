<% if @result %>
  $('[data-qa-c-id="<%= @comment.id %>"]').replaceWith('<%= j render(partial: "comment", locals: {comment: @comment, answer: @answer}) %>');
<% else %>
  $('[data-qa-c-id="<%= @comment.id %>"] .qa-q-c-errors').html('<%= j render(partial: "shared/error_messages", locals: {object: @comment}) %>');
<% end %>
