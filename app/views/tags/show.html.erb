<div class="col-md-2 col-sm-2 col-xs-2 qa-tabs-title">
  <h2>Tags</h2>
</div>
<ul class="nav nav-tabs qa-nav-tabs-right">
  <li class="menu-second-top-nav <%= @tab == "name" ? :active : nil %>">
    <%= link_to "Name", tags_path(tab: :name) %>
  </li>
  <li class="menu-second-top-nav <%= @tab == "popular" ? :active : nil %>">
    <%= link_to "Popular", tags_path(tab: :popular) %>
  </li>
</ul>

<div class="tab-content">
  <div class="qa-main">
    <div class="qa-part-ranking">
      <div class="container">
        <%= render partial: "tag", collection: @tags %>
        <%= paginate @tags, params: {tab: @tab} %>
      </div>
    </div>
  </div>
</div>
