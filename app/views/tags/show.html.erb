<div class="col-md-2 col-sm-2 col-xs-2 qa-tabs-title">
  <h2>Tags</h2>
</div>
<ul class="nav nav-tabs qa-nav-tabs-right">
  <li class="menu-second-top-nav <%= @tab == "name" ? :active : nil %>">
    <%= link_to "Name", tags_path(tab: :name) %>
  </li>
  <li class="menu-second-top-nav <%= @tab == "popular" ? :active : nil %>">
    <%= link_to "Popular", tags_path(tab: :popular) %>
  </li>
</ul>

<div class="tab-content">
  <div class="container">
    <div>
      <p>
        <%= form_tag tags_path(tab: @tab), remote: true, method: :get do |f| %>
          <%= text_field_tag :q, params[:q], id: "tagfilter", placeholder: "Filter by tag name", autofocus: "", autocomplete: "off",
            maxlength: 35 %>
        <% end %>
      </p>
    </div>
    <div class="tags-list">
      <%= render partial: "tags", locals: {tags: @tags, tab: @tab} %>
    </div>
  </div>
</div>
