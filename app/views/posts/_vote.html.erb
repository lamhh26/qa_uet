<%= content_tag :div, class: "voting qa-voting-net", data: {"#{post.post_type}-id": post.id} do %>
  <div class="widget ratings">
    <%= link_to upvote_question_path(post), method: :post, remote: true, class: "up_mod #{@voting.up_mod? ? "voting-color" : nil}" do %>
      <i aria-hidden="true" class="fa fa-caret-up"></i>
    <% end %>
    <div class="points"><%= post.vote_count.to_i %></div>
    <%= link_to downvote_question_path(post), method: :post, remote: true, class: "down_mod #{@voting.down_mod? ? "voting-color" : nil}" do %>
      <i aria-hidden="true" class="fa fa-caret-down"></i>
    <% end %>
  </div>
<% end %>
<% if post.question? %>
  <span class="qa-view-count">
    <span class="qa-view-count-data"><%= pluralize post.views_count, "view" %></span>
  </span>
<% end %>
