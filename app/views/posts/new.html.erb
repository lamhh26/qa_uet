<div class="qa-body-wrapper">
  <div class="qa-main-wrapper">
    <div class="qa-main">
      <h1>Ask a question</h1>
      <div class="qa-part-form">
        <%= form_for @post, url: course_questions_path(@course), class: "form-horizontal" do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.cktext_area :body %>
          </div>
          <div class="form-group">
            <%= f.label :tags %>
            <%= f.text_field :all_tags, class: "form-control" %>
          </div>
          <%= f.submit "Post your question", class: "btn btn-primary" %>
          <%= link_to "Discard", root_path, class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
