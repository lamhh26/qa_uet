<div class="qa-body-wrapper">
  <div class="qa-main-wrapper">
    <div class="qa-main">
      <h1>Edit question</h1>
      <div class="qa-part-form">
      <%= form_for @question, url: question_path, class: "form-horizontal" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.select :category_id, @categories, {include_blank: true, selected: @question.category_id},
            {class: "categories-select form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.cktext_area :body %>
        </div>
        <div class="form-group">
          <%= f.label :tags %>
          <%= f.text_field :all_tags, class: "form-control" %>
        </div>
        <%= f.submit "Update your question", class: "btn btn-primary" %>
        <%= link_to "Discard", question_path(@question), class: "btn" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
