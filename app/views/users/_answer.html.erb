<div class="qa-q-list-item">
  <div class="row">
    <div class="col-md-1 activity-vote-btn">
      <%= link_to answer.vote_count.to_i, question_path(answer.question, anchor: "answer-#{answer.id}"), class: "btn btn-success" %>
    </div>
    <div class="col-md-9">
      <%= link_to answer.question.title, question_path(answer.question, anchor: "answer-#{answer.id}") %>
    </div>
    <div class="pull-right" title=<%= l answer.created_at, format: :date_title %>>
      <% if params[:sort] == "newest" %>
        <%= time_ago_in_words answer.created_at %> ago
      <% else %>
        <%= l answer.created_at, format: :date_activity_question %>
      <% end %>
    </div>
  </div>
</div>
