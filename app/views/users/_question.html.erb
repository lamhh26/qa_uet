<div class="qa-q-list-item">
  <div class="qa-q-item-stats">
    <div class="qa-voting qa-voting-net">
      <div class="qa-vote-count qa-vote-count-net">
        <span class="qa-netvote-count">
          <span class="qa-netvote-count-data"><%= question.vote_count.to_i %></span>
          <span class="qa-netvote-count-pad">votes</span>
        </span>
      </div>
      <div class="qa-vote-clear">
      </div>
    </div>
    <span class="qa-a-count qa-a-count-selected">
      <span class="qa-a-count-data"><%= question.answers_count %></span>
      <span class="qa-a-count-pad"> answers</span>
    </span>
    <span class="qa-a-count qa-activity-view-count">
      <span class="qa-a-count-data qa-activity-view-count-data"><%= question.views_count %></span>
      <span class="qa-a-count-pad qa-activity-view-count-pad"> views</span>
    </span>
  </div>
  <div class="qa-q-item-main">
    <div class="qa-q-item-title">
      <%= link_to question_path(question) do %>
        <span><%= question.title %></span>
      <% end %>
    </div>
    <span class="qa-q-item-avatar-meta">
    </span>
    <div class="qa-q-item-tags">
      <ul class="qa-q-item-tag-list">
        <%= render partial: "posts/tag", collection: question.tags %>
      </ul>
    </div>
  </div>
  <div class="pull-right" title=<%= l question.created_at, format: :date_title %>>
    <%= question.created_at.strftime("%b %d\'%y at %H:%M") %>
  </div>
  <div class="qa-q-item-clear">
  </div>
</div>
