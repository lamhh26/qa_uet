<div id="qa-q-answer" class="collapse toggleable">
  <% if current_user %>
    <div class="qa-part-form">
      <h2>Your answer</h2>
      <%= form_with model: new_answer, url: question_answers_path(question), remote: true do |f| %>
        <div class="qa-a-errors"></div>
        <div class="form-group">
          <%= f.text_area :body, class: "ckeditor" %>
        </div>
        <%= f.submit "Add answer", class: "btn btn-info" %>
        <%= button_tag "Cancel", data: {toggle: :collapse, target: "#qa-q-answer"}, type: :button, class: "btn btn-default btn-cancel" %>
      <% end %>
    </div>
  <% else %>
    <h2>
      Please <%= link_to "log in", new_user_session_path %> or <%= link_to "register", new_user_registration_path %> to answer this question.
    </h2>
  <% end %>
</div>
