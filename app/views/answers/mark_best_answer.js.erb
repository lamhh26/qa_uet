<% if @result %>
  $('[data-qa-q-a-id="<%= @answer.id %>"] .check-icon-toggle').addClass('open');
  $('[data-qa-q-a-id="<%= @answer.id %>"] .check-icon-toggle').parent()
    .attr('href', '<%= unmark_best_answer_question_answer_path(@answer.question, @answer) %>');
  $('[data-qa-q-a-id="<%= @answer.id %>"] .check-icon-toggle').attr('title', '<%= @answer.best_answer_title %>');
<% else %>
  pnotify('Error!', '<%= @answer.errors.messages[:best_answer].first %>', 'error');
<% end %>
